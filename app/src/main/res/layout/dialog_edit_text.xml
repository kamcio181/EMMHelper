<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:paddingLeft="10dp" android:paddingRight="10dp"
    android:paddingTop="10dp">
    <android.support.design.widget.TextInputLayout android:id="@+id/editTextLayout"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText android:id="@+id/editText"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:layout_gravity="center" android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>
</FrameLayout>